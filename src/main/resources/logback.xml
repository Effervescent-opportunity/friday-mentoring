<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <property resource="application.properties"/>


    <if condition='isDefined("${logstash.host}") &amp;&amp; isDefined("${logstash.port}")'>
        <then>
            <appender name="stash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
                <destination>localhost:5044</destination>
                <!--                todo IDK what to do
                21:46:26,916 |-WARN in net.logstash.logback.appender.LogstashTcpSocketAppender[stash] - Log destination 127.0.0.1/<unresolved>:5044: Waiting 28163ms before attempting reconnection.-->
                <!--                in logs: LogstashTcpSocketAppender[stash] - Log destination localhost/<unresolved>:5044-->
                <!--                <destination>${logstash.host}:${logstash.port}</destination>-->
                <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
            </appender>
            <!--            <root>-->
            <!--                <appender-ref ref="stash"/>-->
            <!--            </root>-->
        </then>
    </if>
    <!--    todo в какой-то момент были логи конфигурации логбека, и там было написано, что мол stash не используется-->

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="stash"/>
    </root>
</configuration>